{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@/index": ["."],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@types": ["types"]
    },
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    // "outFile": "index.ts",
    "moduleResolution": "node",
    "outDir": "dist",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "env.d.ts"],
  "exclude": ["node_modules"]
}
