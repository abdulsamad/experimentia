{
  "name": "experimentia",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSE",
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "kill-ports": "kill-port 3000 3001",
    "client:dev": "turbo run dev --filter=client",
    "server:dev": "turbo run dev --filter=server",
    "client:build": "turbo run build --filter=client",
    "server:build": "turbo run build --filter=server"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "prettier": "2.8.4",
    "turbo": "^1.11.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.15.0"
  }
}
