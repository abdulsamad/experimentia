{
	"compilerOptions": {
		"types": ["node"],
		"target": "ES2017",
		"module": "commonjs",
		"baseUrl": "src",
		"paths": {
			"@controllers/*": ["./controllers/*"],
			"@routes/*": ["./routes/*"],
			"@middleware/*": ["./middleware/*"],
			"@utils/*": ["./utils/*"]
		},
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	}
}
